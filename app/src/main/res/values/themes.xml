<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme for API 21+ -->
    <style name="Theme.PlanarClassification" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/neural_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/neural_secondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- TV specific attributes -->
        <item name="android:windowBackground">@color/tv_background</item>
        <item name="android:colorBackground">@color/tv_background</item>
    </style>

    <!-- TV-specific theme -->
    <style name="Theme.PlanarClassification.TV" parent="Theme.PlanarClassification">
        <item name="android:windowBackground">@color/tv_background</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Fullscreen theme for classification interface -->
    <style name="Theme.PlanarClassification.Fullscreen" parent="Theme.PlanarClassification">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/tv_background</item>
    </style>
</resources>